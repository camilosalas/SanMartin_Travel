<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPlomo"
    tools:context=".Fragments.FragmentDetalleCliente.FragmentDetallePaisajeCliente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTransparent"
        android:orientation="vertical">

        <ScrollView
            style="@style/AppTheme"
            android:id="@+id/Registro"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imagesPaisaje"
                    android:contentDescription="@string/content"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:layout_marginTop="50dp" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/verMapaPai"
                    app:fabSize="mini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-47dp"
                    app:backgroundTint="@color/colorPrimary"
                    app:rippleColor="@color/colorWhite"
                    app:srcCompat="@drawable/destino"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Paisaje: "
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/NombrePai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Paisaje"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textStyle="italic"
                    android:inputType="text" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubicaci贸n del Paisaje: "
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:inputType="text" />


                <TextView
                    android:id="@+id/UbicacionPai"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:text="Ubicaci贸n"
                    android:inputType="text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripci贸n del Paisaje: "
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/DescripcionPai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text="Descripci贸n del Paisaje"
                    android:gravity="center"
                    android:padding="5dp"
                    android:inputType="textMultiLine"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>