<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="7dp"
    android:layout_marginEnd="7dp"
    android:layout_marginLeft="7dp"
    android:layout_marginStart="7dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_marginTop="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_vertical|center"
                android:gravity="center_vertical|center">

                <ImageView
                    android:contentDescription="@string/content"
                    android:id="@+id/imgListaCu"
                    android:layout_width="match_parent"
                    android:background="@color/colorPlomo"
                    android:src="@drawable/img_vacia"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_marginEnd="100dp"
                android:layout_marginRight="100dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/listaNombreCultura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    android:text="Nombre Cultura"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="italic|bold"
                    android:typeface="serif"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/listadescripcionCultura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="7dp"
                    android:ellipsize="end"
                    android:text="DescripciÃ³n Cultura"
                    android:textColor="@color/colorBlack"
                    android:textStyle="italic"
                    android:typeface="serif" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>