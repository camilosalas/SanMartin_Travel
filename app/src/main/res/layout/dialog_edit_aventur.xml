<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        style="@style/AppTheme"
        android:id="@+id/Registro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/AventuraView"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mtf_labelColor="#666"
                app:mtf_hasFocus="true"
                android:layout_marginTop="10dp"
                app:mtf_image="@drawable/destino">

                <EditText
                    android:id="@+id/NombreAventuraEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre Aventura"
                    android:inputType="text"/>

            </com.github.florent37.materialtextfield.MaterialTextField>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mtf_labelColor="#666"
                app:mtf_hasFocus="true"
                android:layout_marginTop="5dp"
                app:mtf_image="@drawable/description">

                <EditText
                    android:id="@+id/DescripcionAventuraEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descrip Aventura"
                    android:inputType="text"/>

            </com.github.florent37.materialtextfield.MaterialTextField>

        </LinearLayout>

    </ScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        android:id="@+id/EditarAventuraExperiencia"
        card_view:cardBackgroundColor="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:textSize="22sp"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"/>

    </android.support.v7.widget.CardView>

</LinearLayout>